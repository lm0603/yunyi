		<script type="text/javascript">
			mui.init();
			var self;
			mui.plusReady(function() {
				self = plus.webview.currentWebview();
				//				Sid
				console.log("dsajifhiur" + JSON.stringify(self));
				document.getElementById("proname").innerHTML = self.param.name;
				document.getElementById("protime").innerHTML = self.param.doendtime;
				document.getElementById("pronum").innerHTML = self.param.code;
				//self.Sid项目id

				var pingjiaData = {
					ljd: '',
					lsmyd: '',
					jhmyd: '',
					jcmyd: '',
					xxmyd: '',
					zhpj: '',
					shzd: []
				}
				$(".liRight .item").on("click", function() {
					$(this).siblings().find("img").attr("src", "../../img/star0.png");
					for(var i = 0; i < $(this).index() + 1; i++) {
						$(this).parent().find("li").eq(i).find("img").attr("src", "../../img/star.png")
					}
					pingjiaData[$(this).parent().attr("data-type")] = $(this).index() + 1
				})

				mui(".pjPoint").on("tap", "div", function() {
					var _this = this;
					var index = $(this).index();

					function addThis() {
						$(_this).addClass("active");
						pingjiaData.shzd[index] = $(_this).html();
					}

					function removeThis() {
						$(_this).removeClass("active");
						pingjiaData.shzd[index] = '';
					}
					$(this).hasClass("active") ? removeThis() : addThis();
				})
				mui("#yuyue").on("tap", "button", function() {
					for(var j = 0; j < pingjiaData.shzd.length; j++) {
						//					去除空选项
						if(pingjiaData.shzd[j] == '' || pingjiaData.shzd[j] == null) {
							pingjiaData.shzd.splice(j, 1);
							j--;
						}
					}
					console.log(JSON.stringify(pingjiaData));
					console.log($("#jianyi textarea").val());
					console.log(self.Type)
					var data = handle.commentpjo(localStorage['token'], self.Sid, $("#jianyi textarea").val(), pingjiaData.zhpj)

					plus.nativeUI.toast("评价成功,即将返回我的项目");

