				////						console.log($(this).parent().parent().attr("data-type"));
				//						var type = $(this).parent().parent().attr("data-type");
				//						if(type != "" && type == "tx") {
				//							$(this).parent().find("input").attr("placeholder","请输入").removeAttr("readonly");
				//							
				//						} else if(type != "" && type == "xz") {
				//							var _this = $(this).parent().find("input");
				//							var picker = new mui.PopPicker();
				////							分类选项
				//							picker.setData([{
				//								value: '男',
				//								text: '男'
				//							}, {
				//								value: '女',
				//								text: '女'
				//							}]);
				//
				//							picker.show(function(selectItems) {
				//								app.mydata[dataName]=selectItems[0].value;
				//								_this.val(app.mydata[dataName]);
				//							})
				//						}
				//					}
				//				})
				mui("body").on("tap", ".xz", function() {
					var dataName = $(this).attr("data-name");
					console.log(app.mydata[dataName] === "");
					if(app.mydata[dataName] === "") {
						//						
						var _this = $(this).find("input");
						var picker = new mui.PopPicker();
						//							分类选项
						picker.setData([{
							value: '男',
							text: '男'
						}, {
							value: '女',
							text: '女'
						}]);

						picker.show(function(selectItems) {
							app.newData[dataName] = selectItems[0].value;
							_this.val(app.newData[dataName]);
						})
					}

				})
				var app = new Vue({
					el: "#app",
					data: function() {
						return {
							newData: {

							},
							mydata: {
								"name": "赵冬",
								"caridNo": "510824199408171234",
								"phone": "13258193268",
