		<script type="text/javascript">
			mui.init({
				swipeBack: false,
				keyEventBind: {
					backbutton: false //关闭back按键监听
				},
				pullRefresh: {
					container: '#pullrefresh',
					up: {
						contentrefresh: '正在加载...',
						callback: pullupRefresh
					},
					down: {
						contentrefresh: '正在加载...',
						callback: pulldownRefresh,
						auto: true
					}
				}
			});
			var count = 0;
			var page = 10;
			var index = 2;
			/**
			 * 上拉和下拉加载具体业务实现
			 */
			function pulldownRefresh() {
				setTimeout(function() {
					//					plus.nativeUI.showWaiting("加载中...");
					/*index（几页），page（几条），type（1:直播,2预约）*/
					var data = handle.liveline(1, page, 1);
					//服务器返回响应，根据响应结果，分析是否登录成功；
					console.log("开始" + JSON.stringify(data));
					var html = "";
					if(data!=null&&data.code == 1) {
						mui.each(data.data.list, function(index, value) {
							html = "好的绝望和反对而"
						});
						count = data.data.count;
					}

					document.getElementById("xxk").innerHTML = html;

					//					console.log("count" + count)
					if(count <= (page * 1)) {
						mui('#pullrefresh').pullRefresh().endPulldownToRefresh(true); //参数为true代表没有更多数据了。
						mui('#pullrefresh').pullRefresh().endPullupToRefresh(true); //参数为true代表没有更多数据了。
					} else {
						index = 2;
						mui('#pullrefresh').pullRefresh().endPulldownToRefresh(false); //参数为true代表没有更多数据了。
						mui('#pullrefresh').pullRefresh().refresh(true); //重置下来控件
					}
					plus.nativeUI.closeWaiting();
				}, 1000);
			}

			function pullupRefresh() {

				setTimeout(function() {
					mui('#pullrefresh').pullRefresh().endPullupToRefresh(true); //参数为true代表没有更多数据了。

					console.log("上拉")

				}, 1000);
			}

			/**
			 * 上拉和下拉加载具体业务实现  end
			 */
			mui('#pullrefresh').on("tap", "li", function() {
				this.click();
			});

			//			点击直播详情
			function zbDetail(id, num) {
				//				console.log("A"+id +'b'+num)
				mui.openWindow({
					url: "../../win/win_blueCenter.html",
					id: "win_whiteLeft.html",
					extras: {
						showurl: "../frm/zb/lm_zbDetail.html",
						title: "点播详情",
						Sid: id, //项目的id
						Num: num
					}
				});
				sessionStorage.setItem("proId", id);
				sessionStorage.setItem("proNum", num);

			}

			mui("#menu").on("tap", "li", function() {
				$("#menu>li>span").hide();
				$(this).css("color", "rgb(0, 176, 150)").siblings().css("color", "white");
				$(this).find("span").show();
				$(".proAll").eq($(this).index()).show().siblings().hide();
			})
