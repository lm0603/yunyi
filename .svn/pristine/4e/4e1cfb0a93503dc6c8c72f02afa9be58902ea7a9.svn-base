.mengban {
	width: 100vw;
	height: calc(100vh - 120px);
	background-color: rgba(0, 0, 0, 0.2);
	position: fixed;
	top: 120px;
	left: 0;
	z-index: 99;
	display: none;
}
#danwei {
	width: 90vw;
	height: 350px;
	background-color: #fff;
	position: absolute;
	top: 0px;
	left: 5vw;
	z-index: 100;
	min-height: 200px;
}
#danwei>ul {
	height: 100%;
	overflow-x: auto;
}
.dwLeft {
	width: 25%;
	background-color: #FcFcFc;
	float: left;
}
.dwRight {
	width: 75%;
	background-color: #F7F7F7;
	float: left;
}
.dwLeft li,
.dwRight li,
.xk li {
	padding: 5px;
	border-bottom: 1px solid #eee;
}
.xk li {
	padding: 5px 20px;
}
.dwLeft li.active,
.xk li.active {
	border-left: 5px solid #00B096;
	color: #00B096;
}
.dwRight li.active {
	color: #00B096;
}