#search {
	height: 6.4rem;
	width: 100%;
	background: #71C7D5;
	background-size: cover;
	filter: blur(15);
	padding: 10px 0;
	font-size: 0.8rem;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 9999;
}

#pullrefresh {
	margin-top: 6.4rem;
	padding: 10px 0;
}

.seachArea {
	width: 90%;
	line-height: 35px;
	/*padding: 0 2%;*/
	margin: auto;
	height: 35px;
	background-color: #fff;
	border-radius: 5px;
	overflow: hidden;
	border: 1px #fff solid;
}

.seachArea .myIcon {
	line-height: 30px;
	float: left;
}

input[type=text] {
	width: 65%;
	height: 35px;
	border: none;
	outline: none;
	float: left;
	margin-bottom: 0;
	font-size: 0.8rem;
	padding: 10px 15px;
}

#goSearch {
	float: right;
	display: inline-block;
	width: 15%;
	height: 35px;
	line-height: 35px;
	text-align: right;
	padding-right: 2%;
	border-left: 1px solid #eee;
	color: #26bba5;
}

#searchMenu {
	margin: 20px 0;
	height: 30px;
	overflow: hidden;
}

#searchMenu>li {
	float: left;
	width: 25%;
	line-height: 30px;
	color: #333333;
	text-align: center;
	position: relative;
}
#searchMenu>li.choose{
	color: #f4f4f4;
}
